{
  "name": "nestddd",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "tsc": "tsc -h",
    "build": "rimraf dist && ttsc -p ./tsconfig.build.json",
    "build:dev": "npm run build -- --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run build && pm2 start ecosystem.config.js --env production",
    "start:debug": "nest start --debug --watch",
    "pm2:dev": "npm run build && pm2 start ecosystem.config.js && pm2 save",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js && pm2 save --force",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json",
    "swagger": "nestia swagger 'src/**/*.controller.ts' --out 'doc/swagger.json'",
    "sdk": "nestia sdk 'src/**/*.controller.ts' --out 'doc/sdk'"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.6",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.6",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.1.6",
    "@nestjs/typeorm": "^9.0.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "helmet": "^6.0.0",
    "joi": "^17.7.0",
    "mysql2": "^2.3.3",
    "nestia-helper": "^3.1.8",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "typeorm": "^0.3.10",
    "typescript-json": "^3.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.6",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/jest": "29.2.2",
    "@types/node": "^18.11.9",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.2.2",
    "nestia": "^3.1.3",
    "pm2": "^5.2.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.8.4",
    "typescript-transform-paths": "^3.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/../src/$1",
      "@COMMON/(.*)$": "<rootDir>/../src/api/common/$1",
      "@ACCOUNT/(.*)$": "<rootDir>/../src/api/account/$1",
      "@USER/(.*)$": "<rootDir>/../src/api/user/$1",
      "@CRYPTO/(.*)$": "<rootDir>/../src/api/crypto/$1"
    },
    "coveragePathIgnorePatterns": [
      "main.ts",
      ".module.ts",
      ".entity.ts",
      ".controller.ts",
      "cookie.ts",
      ".key.ts",
      ".decorator.ts",
      ".guard.ts",
      ".strategy.ts",
      ".typeorm.ts",
      ".provider.ts",
      ".provider.ts",
      ".interceptor.ts",
      ".d.ts",
      ".filter.ts"
    ]
  }
}
