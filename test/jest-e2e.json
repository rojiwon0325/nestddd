{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
      "@COMMON/(.*)$": "<rootDir>/../src/api/common/$1",
      "@AUTH/(.*)$": "<rootDir>/../src/api/auth/$1",
      "@USER/(.*)$": "<rootDir>/../src/api/user/$1",
      "@CRYPTO/(.*)$": "<rootDir>/../src/api/crypto/$1"
  }
}
